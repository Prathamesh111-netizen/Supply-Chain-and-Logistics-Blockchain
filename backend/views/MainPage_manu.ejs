<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        body{
            /* background-image: url('https://p4.wallpaperbetter.com/wallpaper/185/914/378/hexagon-white-abstract-3d-abstract-hd-wallpaper-preview.jpg');
            opacity: 0.3; */
            background-color: #f4f4f5;
        }
        .card {
        /* Add shadows to create the "card" effect */
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
        }

        /* On mouse-over, add a deeper shadow */
        .card:hover {
          box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
        }

        /* Add some padding inside the card container */
        .container {
          padding: 2px 16px;
        }
        .box {
            width: 100%;
            display: flex;
        }
        .card {
            background-color: white;
            margin: 10px;
            padding: 10px;
        }
        .container input{
            border: none;
        }
        #popup div{
            width: 100%;
            margin: auto;
            text-align: center;
            margin-bottom: 20px;
        }
        #popup div p{
            display: inline;
            margin-right: 20px;
        }
        li{
            list-style-type: none;
        }
        #profimag{
            width: 40px;
        }
        .profile{
            padding: 10px;
        }
    </style>
</head>
<body>

    <!-- Alert -->
    <div id="popup">
        <div>
            <% if (Data.Alert != "") {%>
            <p><%= Data.Alert %></p>
            <input type="submit" value="x" onclick="remove()">
            <% }%>
        </div>
    </div>

    <script>
        function remove(){
            const element = document.getElementById("popup");
            element.remove();
        }
    </script>
    <!-- profile Section -->
    <div class = "profile-flex">
        <div class="profile">
            <h2><img id ="profimag" src="https://icon-library.com/images/coder-icon/coder-icon-13.jpg" alt=""> Profile</h2>
            <div class="details">
                 <ul >
                    <% if (Data.Profile != {}){ for (var prop in Data.Profile ) { %>
                        <li> <%= prop %> : <%= Data.Profile[prop] %></li>
                    <% } } else {%>
                        <li>No data available</li>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>

    <!-- Input form section -->
<div class = "form-for-data-upload">
    <h2><img src="https://cdn-icons-png.flaticon.com/512/1486/1486433.png" alt="" width="40px">Update Raw Material</h4>
    <form action="/manufacturer/produce-material" method="post" class = "dataform">
        <input type="text" name = "Material" placeholder="Material">
        <input type="text" name = "Capacity" placeholder="Capacity">
        <input type="text" name = "Price" placeholder="Price">
        <input type="submit" value = "Submit">
    </form>
    </div>
    
    <style>
        .form-for-data-upload{
            /* margin: 0px 0px 0px 10px; */
            padding: 10px;
        }
        .dataform div{
            padding-bottom: 10px;
        }
    </style>

<!-- available stock -->
<div>
    <h2> <img src="https://cdn-icons-png.flaticon.com/512/172/172150.png" alt="" width="30px"> Current Stock</h2>
    <% if (Data.Stock.length == 0) {%>
            <h3>No stock present</h3>  
            <% } %>
            <div class = "box">
                
                <% if (Data.Stock) { for (const stock of Data.Stock) { %>
                    <div class="card">
                        <div class = "container">
                            <form >
                                <% if (stock != {}) { %>
                                    <label for="country"> Material :</label>
                                    <input type="text" name="Material" readonly value= <%= stock.Material %> ><br><br>
                                    <label for="country"> Capacity :</label>
                                    <input type="text" name="Capacity" readonly value= <%= stock.Capacity %> ><br><br>
                                    <label for="country"> Price :</label>
                                    <input type="text"  name="Price" readonly value= <%= stock.Price %> ><br><br>
                                    <!-- <input type="submit" value="Accept Request"> -->
                                    <% } %>
                                    </form>
                                </div>
            </div>
            <% } } %>
              
            </div>
        </div>
        <!-- Table / Collection Section -->
        <div>
            <h2> <img src="https://www.clipartmax.com/png/middle/255-2552677_cluster-icons-foodprocessing-blue-food-raw-materials-icon.png" alt="" width="40px"> Raw Material Requests on the Network</h2>
        <% if (Data.Requests.length == 0) {%>
            <h3>No requests present</h3>  
        <% } %>
        <div class = "box">
        
             <% if (Data.Requests) { for (const Request of Data.Requests) { %>
            <div class="card">
                <div class = "container">
                    <% if (Request != {}) {  %>
                    <form action="/manufacturer/accept-request" method="post">
                        <label for="Material"> Product :</label>
                        <input type="text" readonly name="Product" value= <%= Request.Product %> ><br><br>
                        <label for="Material"> Material :</label>
                        <input type="text" readonly name="Material" value= <%= Request.Material %> ><br><br>
                        <label for="Capacity"> Capacity :</label>
                        <input type="text" readonly name="Capacity" value= <%= Request.Capacity %> ><br><br>
                        <label for="Price"> Price:</label>
                        <input type="text" readonly name="Price" value= <%= Request.Price %> ><br><br>
                        <input type="submit" value="Accept Request">
                    </form>
                    <% } %>
                </div>
            </div>
            <% }} %>
           
              
              
              
            
</div>
</div>
    <div>
        <img id = "bg" src="https://png.pngtree.com/png-vector/20190130/ourlarge/pngtree-blue-blockchain-big-data-financial-finance-bitcoin-element-managementbreathable-designbitcoin-png-image_653690.jpg" alt="">
    </div>
    <style>
        #bg {
            position: absolute;
            right: 0px;
            bottom: 0px; 
            z-index: -1;   
        }
    </style>


</body>
</html>